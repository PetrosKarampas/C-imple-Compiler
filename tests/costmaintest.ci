program CostMainTest

		declare a,b,c;
		declare cost;
	
	# main #
	{
		input(cost);
		a := 100;
		b := 50;
		c := 0;
		
		while (cost>a)
		{
			if (cost<2*a and cost>b)
			{
				cost := cost/4;
				c := cost;
			}
			else
			{
				cost := 100;
				c := 100;
			};
		};

		switchcase
			case (c<>100) 
            {
                cost := cost*2;
            }
			case (c=100)
            {
                c:=1;
            }
			default c:=0;
		;

		print (cost);

	}.